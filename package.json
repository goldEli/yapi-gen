{
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start": "vite",
    "build:development": "npm run lint && vite build --mode development",
    "build:test": "npm run lint && vite build --mode test",
    "build:production": "npm run lint && vite build",
    "lint": "tsc && eslint --ext .ts,.tsx,.vue source",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ant-design/charts": "^1.4.1",
    "@commitlint/cli": "^17.0.2",
    "@emotion/css": "^11.7.1",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.8.1",
    "@jihe/http-client": "^0.0.2",
    "@jihe/secure-log": "^0.0.2",
    "@jihe/use-model": "^0.0.1",
    "@star-yun/ui": "^0.0.3",
    "@staryuntech/ant-pro": "0.0.22",
    "@wangeditor/editor": "^5.1.11",
    "@wangeditor/editor-for-react": "^1.0.4",
    "antd": "^4.19.2",
    "cos-js-sdk-v5": "^1.3.9",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.0",
    "highcharts": "^10.2.0",
    "highcharts-react-official": "^3.1.0",
    "less": "^4.1.3",
    "lodash": "^4.17.21",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^11.16.2",
    "react-router-dom": "^6.3.0",
    "swiper": "^8.3.1"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.9.2",
    "@jihe/eslint-config-react": "^0.0.6",
    "@jihe/prettier-config": "^0.0.2",
    "@jihe/stylelint-config": "^0.0.1",
    "@types/node": "^17.0.42",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@vitejs/plugin-react": "^1.3.0",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.9"
  },
  "name": "@jihe/template-react",
  "prettier": "@jihe/prettier-config",
  "stylelint": {
    "extends": "@jihe/stylelint-config"
  },
  "eslintConfig": {
    "extends": [
      "@jihe/eslint-config-react"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig.node.json"
      ]
    },
    "rules": {
      "object-property-newline": [
        1,
        {
          "allowAllPropertiesOnSameLine": true
        }
      ],
      "function-call-argument-newline": [
        1,
        "consistent"
      ],
      "@typescript-eslint/indent": [
        1,
        2,
        {
          "offsetTernaryExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": 0
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,less}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{md,json,json5,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
